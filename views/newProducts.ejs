<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bisne macrame | HOME</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/newProducts.css">
    </head>
    <body>
        <%- include('./partials/header.ejs')%>
        <main>
            <aside id="mySidebar">
                <div class="top-sidebar">
                    <div class="search-input">
                        <input type="text" placeholder="Buscar">
                    </div>
                    <div class="close-icon">
                        <i class="fas fa-xmark" onclick="closeNav()"></i>
                    </div>
                </div>
                <div class="main-sidebar">
                    <ul class="main-menu">
                        <li><a href="index">Inicio</a></li>
                        <li class="menu-item"><a href="#">Categorías <span class="arrow">&#9658;</span></a>
                            <ul class="submenu">
                                <li><a href="#">Tapices</a></li>
                                <li><a href="#">Espejos </a></li>
                                <li><a href="#">Cuelga macetas</a></li>
                                <li><a href="#">Sujeta cortinas</a></li>
                                <li><a href="#">Varios</a></li>
                                <li><a href="#">Cursos</a></li>
                              </ul>
                        </li>
                        <li><a href="#">Sobre nosotros</a></li>
                        <li><a href="#">Envíos</a></li>
                        <li><a href="#">Contacto</a></li>
                    </ul>
                </div>
                <div class="bottom-sidebar">
                    <ul>
                        <li><a href="productCart"><i class="fas fa-light fa-cart-shopping"></i>Carrito</a></li>
                        <li><a href="login"><i class="fas fa-regular fa-arrow-right-to-bracket"></i>Login</a></li>
                    </ul>
                </div>
            </aside>
            <div class="main-header">
                <p>Actualiza el producto </p>
            </div>

        <!--New products form --> 
        
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <h2>Formulario de registro de productos</h2>



                    <form method="POST" action="/newProducts" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 my-1">
                                <div class="form-group">
                                    <label><b>Nombre del Producto:</b></label>
                                    <input 
                                        type="text" 
                                        name="productName" 
                                        class="form-control <%= locals.errors && errors.productName ? 'is-invalid' : null %>"
                                        value="<%= locals.oldData ? oldData.productName : null %>"
                                    >
                                    <% if (locals.errors && errors.productName) { %>
                                        <div class="text-danger">
                                            <%= errors.productName.msg %> 
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                    

                            <div class="col-md-6 my-1">
                                <div class="form-group">
                                    <label><b>Descripcion del Producto:</b></label>
                                    <input 
                                        type="text" 
                                        name="descripcion" 
                                        class="form-control <%= locals.errors && errors.descripcion ? 'is-invalid' : null %>"
                                        value="<%= locals.oldData ? oldData.descripcion : null %>"
                                    >
                                    <% if (locals.errors && errors.descripcion) { %>
                                        <div class="text-danger">
                                            <%= errors.descripcion.msg %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>


                            <div class="col-md-6 my-1">
                                <div class="form-group">
                                    <label><b>Precio del Producto:</b></label>
                                    <input 
                                        type="text" 
                                        name="precio" 
                                        class="form-control <%= locals.errors && errors.precio ? 'is-invalid' : null %>"
                                        value="<%= locals.oldData ? oldData.precio : null %>"
                                    >
                                    <% if (locals.errors && errors.precio) { %>
                                        <div class="text-danger">
                                            <%= errors.precio.msg %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>



                            <div class="col-md-6 my-1">
                                <div class="form-group">
                                    <label><b>Categoria:</b></label>
                                    <select 
                                        name="category" 
                                        class="form-select <%= locals.errors && errors.category ? 'is-invalid' : null %>"
                                    >
                                        <option value="">Elige una categoria </option>
                                        <%  
                                            let categories = ["Tapices", "Espejos", "Cuelga Macetas", "Sujeta Cortinas", "Varios", "Cursos"];
                                        %>
                                        <% for (const oneCategory of categories) { %>
                                            <option 
                                                value="<%= oneCategory %>"
                                                <%= locals.oldData && (oneCategory === oldData.category) ? 'selected' : null %> 
                                            > <%= oneCategory %> </option>
                                        <% } %>
                                    </select>
                                    <% if (locals.errors && errors.category) { %>
                                        <div class="text-danger">
                                            <%= errors.category.msg %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>





                            <div class="col-md-6 my-1">
                                <div class="form-group">
                                    <label><b>Imagen del producto:</b></label>
                                    <input 
                                        type="file" 
                                        name="avatar"
                                        class="form-control <%= locals.errors && errors.avatar ? 'is-invalid' : null %>"
                                    >
                                    <% if (locals.errors && errors.avatar) { %>
                                        <div class="text-danger">
                                            <%= errors.avatar.msg %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-12 my-5">
                                <button type="submit" class="btn btn-primary">Registrarse</button>
                            </div>





                        </div>    
                    </form>
                </div>
            </div>
        </div>

          
                      

        </main>
        <%- include('./partials/footer.ejs')%>
        <script>
            /*Set ancho de sidebar*/
            function openNav() {
                document.getElementById("mySidebar").style.width = "300px";
                document.getElementByTagName("body").style.marginLeft = "300px";
            }

            /*Set posición de sidebar*/
            function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            }

            //Obtener del menú "Categorías" y su submenú
            const categoriasMenu = document.querySelector('.menu-item');
            const submenu = document.querySelector('.submenu');

            //Agrega un evento de clic al elemento del menú "Categorías"
            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "collapsed" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('collapsed');
                // Mostrar u ocultar el submenú
                submenu.style.display = submenu.style.display === 'none' ? 'block' : 'none';
            });

            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "open" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('open');
                submenu.style.display = categoriasMenu.classList.contains('open') ? 'block' : 'none';
                });
        </script>
    </body>
</html>